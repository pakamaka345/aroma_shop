<html>
    <head>
        <title><%= t('Авторизація') %></title>
        <%= stylesheet_link_tag 'login' %>
    </head>
    <body>
        <div class="main-div">
            <%= form_with(url: login_path, method: :post, local: true, id: "login-form") do %>
                <h1 id="login-title"><%= t('Авторизація') %></h1>
                <% if flash[:alert] %>
                <div class="alert-danger">
                    <%= flash[:alert] %>
                </div>
                <% end %>
                <div class="form-group">
                    <%= label_tag(:login, t("Email або ім'я користувача"), id: "login-label") %>
                    <%= text_field_tag(:login, nil, id: "login-field") %>
                </div>
                <div class="form-group">
                    <%= label_tag(:password, t("Пароль"), id: "password-label") %>
                    <%= password_field_tag(:password, nil, id: "password-field") %>
                </div>
                <div class="form-group">
                    <%= submit_tag(t("Увійти"), id: "login-button") %>
                </div>
                <div class="form-group">
                    <%= link_to t('Ще немає аккаунта?'), register_path, class: 'login-button' %>
                    <%= link_to t('Забув пароль?'), forgot_password_path, class: 'login-button' %>
                </div>
            <% end %>
        </div>
    </body>
</html>
